{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      2,
      4,
      {
        "FunctionExpression": { "parameters": "first" },
        "CallExpression": { "arguments": "first" }
      }
    ],
    "object-curly-spacing": [
        2,
        "always"
    ]
  },
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended"
}
